@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Carousel Styling */
    #foodCarousel {
        width: 100%; /* Ensure the carousel spans the full width of the container */
        max-height: 400px; /* Limit the height */
        overflow: hidden;
    }

        #foodCarousel img {
            width: 100%; /* Stretch the image to fit the width */
            height: 400px; /* Fixed height */
            object-fit: cover; /* Ensures the image covers the container without distortion */
        }

    .carousel-item {
        height: 400px; /* Matches the height of the carousel */
    }

    /* Section & Carousel Animation */
    .section, #foodCarousel {
        opacity: 0;
        transform: translateY(50px);
        transition: opacity 0.8s ease, transform 0.8s ease;
    }

        .section.visible, #foodCarousel.visible {
            opacity: 1;
            transform: translateY(0);
        }

    /* Modern Footer Styling */
    footer {
        background: linear-gradient(to right, #232526, #414345);
        color: white;
    }

        footer a {
            color: #f8b500;
            text-decoration: none;
        }

            footer a:hover {
                text-decoration: underline;
            }
</style>

<div class="position-relative bg-dark text-white">
    <!-- Carousel Section -->
    <div id="foodCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://static.independent.co.uk/2023/02/16/11/Sausages.jpg" alt="Healthy Food">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Discover Delicious Recipes</h2>
                    <p>Explore nutritious meals tailored for your lifestyle.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://fitmealsprep.com/wp-content/uploads/2023/08/Fit-Meals-Prep_Top-Reasons-Why-Using-Fresh-Ingredients-Really-Matters.jpg" alt="Fresh Ingredients">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Fresh Ingredients</h2>
                    <p>Only the best for you and your family.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://cominghome.org.za/wp-content/uploads/2024/02/960x0.jpg.webp" alt="Healthy Lifestyle">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Embrace a Healthy Lifestyle</h2>
                    <p>Healthy eating starts here.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#foodCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#foodCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<!-- Scrolling Sections -->
<div class="container my-5">
    <section class="section py-5">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="text-success">Nutritional Facts</h2>
                <p>Learn about the nutritional value of various foods and how they contribute to your health.</p>
            </div>
            <div class="col-md-6 text-center">
                <img src="https://www.mlchc.org/sites/default/files/styles/max_650x650/public/2022-03/nutrition_image2.jpg?itok=fUi0J40D" class="img-fluid rounded shadow" alt="Nutrition">
            </div>
        </div>
    </section>
    <hr class="my-5">
    <section class="section py-5">
        <div class="row align-items-center">
            <div class="col-md-6 order-md-2">
                <h2 class="text-primary">What We Offer</h2>
                <p>Discover a wide range of food products tailored to different dietary needs, including vegan, vegetarian, and gluten-free options.</p>
            </div>
            <div class="col-md-6 order-md-1 text-center">
                <img src="https://mrtsbakery.com.au/cdn/shop/articles/managing-dietary-requirements_1456x.png?v=1720404597" class="img-fluid rounded shadow" alt="Offerings">
            </div>
        </div>
    </section>
    <hr class="my-5">
    <section class="section py-5">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="text-warning">Our Mission</h2>
                <p>Empowering you to make informed food choices with trusted information and high-quality products.</p>
            </div>
            <div class="col-md-6 text-center">
                <img src="https://media.licdn.com/dms/image/D4D12AQFTazLYBgjraQ/article-cover_image-shrink_600_2000/0/1696848710650?e=2147483647&v=beta&t=5Ve9sVsW85IWdH2IllwOpyF5JtE18ES6cGQu9gPl2Kc" class="img-fluid rounded shadow" alt="Mission">
            </div>
        </div>
    </section>
</div>


@section Scripts {
    <script>
        // Smooth Scrolling on Page Load
        document.addEventListener("DOMContentLoaded", function () {
            const elements = document.querySelectorAll(".section, #foodCarousel");

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add("visible");
                    }
                });
            }, { threshold: 0.2 });

            elements.forEach(element => {
                observer.observe(element);
            });
        });
    </script>
}
